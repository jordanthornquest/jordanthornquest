{
  "name": "jordanthornquest",
  "version": "1.0.0",
  "description": "Personal website built with Eleventy.",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "autoprefixer": "^10.2.5",
    "concurrently": "^6.0.2",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.1.0"
  },
  "scripts": {
    "build": "npm run clean && npm run build:styles && npm run build:site",
    "build:site": "NODE_ENV=production npx @11ty/eleventy",
    "build:styles": "NODE_ENV=production npx postcss --config ./postcss.config.js ./src/_assets/css/tailwind.css -o ./src/_assets/css/compiled.css",
    "clean": "npx rimraf ./dist/",
    "start": "npm run clean && npx concurrently \"watch:site\" \"watch:styles\"",
    "watch:site": "NODE_ENV=development npx @11ty/eleventy --serve",
    "watch:styles": "npx postcss --config ./postcss.config.js ./src/_assets/css/tailwind.css -o ./src/_assets/css/compiled.css -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jordanthornquest/jordanthornquest.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jordanthornquest/jordanthornquest/issues"
  },
  "homepage": "https://github.com/jordanthornquest/jordanthornquest#readme"
}
